<h1><%= @post.name %></h1>
<p>Description: <%= @post.description %></p>
<p>User: <%= @post.user.name %></p>

<% @snaps.each do |snap| %>
  <img src="<%= snap.photo.url %>"></img>
  <% if snap.video.url != nil %>
    <video src="<%= snap.video.url %>" controls></video>
  <% end %>
<% end %>

<div>
  <%= render 'snaps/formphoto' %>
  <%= render 'snaps/formvideo' %>
</div>

<div>
  <div>
    <%= render 'comments/form' %>
  </div>

  <div>
    <% @comments.each do |comment| %>
      <ul>
        <li>Rating: <%= render_stars(comment.rating) %></li>
        <li>By <%= comment.user.name %></li>
        <li><%= comment.body %></li>
      </ul>
    <% end %>
  </div>
</div>


<%= link_to "Edit", edit_post_path %>
<%= link_to "Destroy", post_path(@post), method: :delete, data: { confirm: "Are you sure? "} %>
<%= link_to "Home", root_path %>
